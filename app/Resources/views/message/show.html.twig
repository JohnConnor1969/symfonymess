{% extends 'base.html.twig' %}

{% block body %}
    <h1>Message</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ message.name }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ message.text }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if message.createdAt %}{{ message.createdAt|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Stipulation</th>
                <td>{{ message.stipulation }}</td>
            </tr>
            <tr>
                <th>Targetgroup</th>
                <td>{{ message.targetGroup }}</td>
            </tr>
            <tr>
                <th>Targetdevice</th>
                <td>{{ message.targetDevice }}</td>
            </tr>
            <tr>
                <th>Targetdate</th>
                <td>{% if message.targetDate %}{{ message.targetDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Expiration</th>
                <td>{{ message.expiration }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('message_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('message_edit', { 'id': message.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
